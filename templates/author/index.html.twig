{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Author List</h1>

		{# templates/author/index.html.twig #}
		<h1>Lista Autori</h1>

		<ul>
			{% for author in authors %}
				<li>{{ author.name }}
					({{ author.email }})</li>
			{% else %}
				<li>Nessun autore trovato.</li>
			{% endfor %}
		</ul>

	</div>
{% endblock %}
